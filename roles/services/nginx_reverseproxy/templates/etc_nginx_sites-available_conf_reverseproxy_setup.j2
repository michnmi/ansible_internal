server {
	listen   {{ proxy.port }} ssl;
	http2 on;
	server_name {{ proxy.name }};

	ssl_certificate {{ proxy.ssl_certificate }};
	ssl_certificate_key {{ proxy.ssl_certificate_key }};

	# Block mismatched Host header even if SNI matched
	if ($allow_host = 0) { return 444; }

	include /etc/nginx/snippets/block-bots.conf;

    # General per-IP throttle
    limit_req zone=req_per_ip burst=250 nodelay;

    location / {
    	proxy_buffering off;
        proxy_pass {{ proxy.proxy_pass }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        client_max_body_size {{ proxy.client_max_body_size }};

        {% if proxy.websocket | default(false) %}
        proxy_http_version 1.1;
        proxy_set_header Upgrade    $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_read_timeout 36000s;
        {% endif %}
    }
}
